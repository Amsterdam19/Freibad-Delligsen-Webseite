---
import { Icon } from "astro-icon";
import NavItem from "./NavItem.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split("/");
const { className } = Astro.props;
---

<nav id="homeNav" class={`${className}`}>
    <a class="noLink" href="/">
        <div class="logo">
            <Icon name="freibadLogo" />
            <h4>Freibad Delligsen</h4>
        </div>
    </a>
    <ul class="nav-links">
        <NavItem
            title="Startseite"
            url=""
            current={currentPath[1]}
            icon="home"
        />
        <NavItem
            title="Öffnungszeiten"
            url="zeiten"
            current={currentPath[1]}
            icon="time"
        />
        <NavItem
            title="Eintrittspreise"
            url="preise"
            current={currentPath[1]}
            icon="pay"
        />
        <NavItem
            title="Veranstaltungen"
            url="veranstaltungen"
            current={currentPath[1]}
            icon="date"
        />
        <NavItem
            title="Neuigkeiten"
            url="neues"
            current={currentPath[1]}
            icon="news"
        />
        <NavItem
            title="Galerie"
            url="galerie"
            current={currentPath[1]}
            icon="gallery"
        />
    </ul>
    <div
        class="burger"
        aria-label="Menu öffnen"
        aria-controls="nav-links"
        aria-expanded="false"
    >
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
    </div>
</nav>

<style>
    nav {
        z-index: 999;
        top: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /*Logo*/
    .noLink {
        text-decoration: none;
    }

    .logo {
        display: flex;
        flex-direction: row;
    }

    .logo [astro-icon="freibadLogo"] {
        display: block !important;
        fill: var(--primary-dark);
        width: 50px !important;
    }

    .logo h4 {
        color: var(--primary-dark);
        font-size: 18pt;
        font-weight: 700;
        letter-spacing: -1px;
        margin-left: 1rem;
    }

    /*NavLinks*/
    .nav-links {
        display: flex;
        justify-content: space-around;
        transition: all 0.2s ease-in-out;
    }

    /*Burger*/
    .burger {
        display: none;
        cursor: pointer;
    }

    .burger div {
        width: 25px;
        height: 5px;
        background-color: var(--text);
        margin: 3px;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    @media screen and (max-width: 1270px) {
        .nav-links {
            position: absolute;
            right: 0px;
            height: fit-content;
            top: calc(var(--navbar-height) + 1rem);
            bottom: 1vh;
            background-color: white;
            border-top-left-radius: var(--border-radius);
            border-end-start-radius: var(--border-radius);
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            padding: 1rem;
            width: 300px;
            box-shadow: var(--nav-shadow);
            transform: translateX(110%) rotateY(135deg);
            opacity: 0.9;
        }
        .burger {
            display: block;
        }
    }

    @media screen and (max-width: 500px) {
        .nav-links {
            right: 0px;
            height: calc(100vh - 2 * 1.5rem - 1.75rem);
            top: calc(2 * 1.5rem + 1.75rem);
            background-color: white;
            border-radius: 0px;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            box-shadow: none;
            padding-bottom: 8vh;
            transform: translateX(100%) rotateY(135deg);
            opacity: 0.9;
        }
    }

    @media screen and (max-width: 400px) {
        .logo [astro-icon="freibadLogo"] {
            display: none !important;
        }

        .logo h4 {
            margin: 0px;
        }

        .nav-links {
            position: absolute;
        }
    }

    /* Menu Animationen */

    .nav-active {
        transform: translateX(0%) rotateY(0deg);
        opacity: 1;
    }

    @keyframes navLinkFade {
        from {
            opacity: 0;
            transform: translateX(50px);
        }

        to {
            opacity: 1;
            transform: translateX(0px);
        }
    }
    @keyframes navLinkFadeOut {
        from {
            opacity: 1;
            transform: translateX(0px);
        }

        to {
            opacity: 0;
            transform: translateX(50px);
        }
    }

    .burgerToggle .line1 {
        transform: rotate(-45deg) translate(-5px, 6px);
    }

    .burgerToggle .line2 {
        opacity: 0;
    }

    .burgerToggle .line3 {
        transform: rotate(45deg) translate(-5px, -6px);
    }
</style>
