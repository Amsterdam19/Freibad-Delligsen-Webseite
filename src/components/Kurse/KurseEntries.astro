---
const { h3, p } = Astro.props;
---

<div>
    <h3>{h3 + " "}</h3>
    <p>{p}</p>
</div>
<style>
    div {
        display: grid;
        grid-template-columns: 2fr 3fr;
        gap: 0.5rem 0.2rem;
    }

    h3,
    p {
        font-size: larger;
        color: var(--text);
    }

    @media only screen and (max-width: 800px) {
        div {
            grid-template-columns: 1fr;
        }
    }
</style>
