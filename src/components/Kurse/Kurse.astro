---
import { Icon } from "astro-icon";
import KurseEntries from "./KurseEntries.astro";
import KurseItem from "./KurseItem.astro";
---

<section>
  <div class="titelh2">
    <h2><span>Schwimmkurse</span> im Freibad Delligsen</h2>
  </div>
  <div class="HomeWhite">
    <!--Seepferd -->
    <KurseItem titel="Seepferdchen" svg="seepferd" id="1">
      <KurseEntries h3="Gruppengröße:" p="max. 8 Kinder" />
      <KurseEntries h3="Alter der Kinder:" p="ab 6 Jahren" />
      <KurseEntries
        h3="Kosten:"
        p="Anmeldegebühr 40€ & für jede Stundenteilnahme 4€"
      />
      <KurseEntries h3="Beginn des Kurses:" p="19.06.2023" />
    </KurseItem>
    <!--Bronze -->
    <KurseItem titel="Bronze" svg="bronze" id="2">
      <KurseEntries h3="Gruppengröße:" p="max. 8 Kinder" />
      <KurseEntries
        h3="Zielgruppe:"
        p="Alle Kinder, die bereits das Seepferdchen erworben haben."
      />
      <KurseEntries
        h3="Kosten:"
        p="Anmeldegebühr 25€ & für jede Stundenteilnahme 4€"
      />
      <KurseEntries h3="Beginn des Kurses:" p="10.07.2023" />
    </KurseItem>

    <div class="anmeldung">
      <p>
        Anmeldung:
        <a href="mailto:alice.moeller@t-online.de">
          <Icon name="IcRoundEmail" />
          alice.moeller@t-online.de</a
        >
      </p>
      <p class="red">
        Änderungen des Schwimmkursbeginns sind wetterbedingt m&ouml;glich!!!
      </p>
      <br />
    </div>
  </div>
</section>

<style>
  section {
    max-width: var(--site-width);
    width: 100%;
    margin-inline: auto;
  }
  
  .titelh2 {
    color: var(--text);
    padding-block: 5rem;
    text-align: center;
    font-size: 20pt;
    letter-spacing: -1px;
    font-weight: 700;
  }
  span {
    background: linear-gradient(120deg, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .HomeWhite {
    background-color: transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    vertical-align: middle;
    padding-bottom: 10vh;
  }

  .anmeldung {
    margin-top: 30px;
    width: fit-content;
    margin-inline: 1rem;
    text-align: center;
  }

  p:first-child {
    font-size: x-large;
    color: var(--text);
  }

  .red {
    color: rgb(138, 2, 2);
  }

  a {
    text-decoration: none;
    color: var(--text);
  }

  [astro-icon] {
    display: inline-block;
    height: 24px;
    vertical-align: bottom;
    font-size: 24px !important;
  }
</style>
