---
const { src, alt, width = 4, height = 3, radius =  "var(--border-radius)", classes, ...props} = Astro.props;
import { Image } from 'astro:assets';
---
<Image
    loading="eager"
    quality="mid"
    src={src}
    format="webp"
    width={1000}
    alt={alt}
    style={"border-radius:"+radius+";"}
    class:list={[
        classes,
        ]}
    {...props}
/>

<style>
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 0.8rem 0.8rem 0 0;
    }
</style>
