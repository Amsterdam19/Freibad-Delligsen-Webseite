---
const { date, day, month, titel } = Astro.props;
---

<div class="grid">
    <div class="date">
        <p>{date}</p>
        <div class="dateGrid">
            <div>{day}</div>
            <div>{month}</div>
        </div>
    </div>
    <h2>{titel}</h2>
</div>
<style>
    .grid {
        transition: transform 0.2s;
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10%;
        margin-left: 5%;
        margin-right: 5%;
    }
    .date {
        font-weight: 300;
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    p {
        color: var(--primary-dark);
        font-weight: bold;
        font-size: 30pt;
        font-weight: 700;
        min-width: 4rem;
        text-align: end;
    }
    div {
        color: var(--text);
    }
    .dateGrid {
        display: grid;
        grid-template-rows: 1fr 1fr;
        margin-left: 16px;
    }
    .dateGrid div {
        color: var(--primary-dark);
    }
    h2 {
        height: 100%;
        width: 100%;
        display: flex;
        align-items: center;
    }
    @media screen and (max-width: 800px) {
        .grid {
            gap: 1%;
        }
    }
    @media screen and (max-width: 500px) {
        .grid {
            grid-template-columns: 1fr;
            grid-template-rows: 2fr 2fr;
        }
        .date {
            justify-content: center;
        }
        h2 {
            padding-top: 10px;
            text-align: center;
            font-size: larger;
        }
    }
</style>
