---
import { getImage } from "astro:assets";
import myBackground from "../assets/images/nature-943768_1920.jpg";

const optimizedBackground = await getImage({
    src: myBackground,
    format: "webp",
});
---

<div
    class="full-width bg-div"
    style={`background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(${optimizedBackground.src});`}
>
    <h2>Hils <br />Heika</h2>
    <p>Von <strong>Kaierde</strong> bis ans <strong>Mittelmeer</strong></p>
    <a href="https://hils-heika.de">mehr</a>
</div>

<style>
    .bg-div {
        position: relative;
        width: 100%;
        height: 90vh;
        height: 90svh;
        margin-block: 4rem;
        display: flex !important;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: var(--background);
        text-align: center;
    }
    h2 {
        font-size: clamp(5rem, 3.4694rem + 8.1633vw, 10rem);
    }
    p,a {
        font-size: clamp(1.5rem, 1.3469rem + 0.8163vw, 2rem);
        max-width: 20rem;
        line-height: 3rem;
        color: white;
    }
</style>
