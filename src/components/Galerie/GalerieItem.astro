---
const { img, titel } = Astro.props;
import { Picture } from 'astro:assets';
---

<div class="responsive">
    <div class="gallery">
        <a target="_blank" href={img.src}>
            <div class="picture">
                <Picture src={img} formats={['avif', 'webp']} alt={titel} />
            </div>
            <div class="titel">
                <p>{titel}</p>
            </div>
        </a>
    </div>
</div>

<style>
    a {
        text-decoration: none;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .picture {
        grid-area: 1 / 1 / 3 / 2;
    }
    .titel {
        display: flex;
        align-items: flex-end;
        justify-content: flex-end;
        grid-area: 2 / 1 / 3 / 2;
    }
    .responsive {
        height: auto;
        width: fit-content;
        margin: 1rem;
        border-radius: var(--border-radius);
        overflow: hidden;
    }
    .gallery {
        background-color: white;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
            0 6px 20px 0 rgba(0, 0, 0, 0.19);
        transition: 0.3s;
        margin-bottom: -10px;
    }
    .gallery:hover {
        background-color: var(--accent-color);
        box-shadow: 0 6px 12px 0 rgba(0, 0, 0, 0.527),
            0 9px 20px 0 rgba(0, 0, 0, 0.19);
        color: var(--lighter-blue);
    }
    .gallery:hover img{
        transform: scale(1.1);
    }
    img {
        transition: 0.3s;
        display: block;
        width: 100%;
        border-radius: var(--border-radius);
        height: auto;
    }
    p {
        font-weight: 300;
        font-size: 14pt;
        color: var(--text);
        padding: 16px;
        margin: 16px;
        background-color: rgba(240, 248, 255, 0.847);
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        text-align: center;
    }
</style>
