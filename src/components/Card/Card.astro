---
const { titel } = Astro.props;
---

<div class="card">
    <div class="title">{titel}</div>
    <div class="content">
        <slot />
    </div>
</div>

<style>
    .card {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        padding: 16px;
        margin: 3%;
        border-radius: var(--border-radius);
        width: 100%;
        max-width: 450px;
        height: 500px;
        display: grid;
        grid-template-rows: auto 1fr;
    }
    .title {
        font-weight: 300;
        text-align: center;
        font-size: xx-large;
        margin-top: 1rem;
        color: var(--text);
        margin-bottom: 1.5rem;
    }
    .content {
        display: grid;
        width: 100%;
        gap: 1rem;
        padding: 1rem;
        padding-top: 30px;
        border-radius: var(--border-radius);
        background-color: var(--secondary);
    }
</style>
