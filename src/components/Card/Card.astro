---
const { titel } = Astro.props;
---

<div class="card">
    <div class="title">{titel}</div>
    <div class="content">
        <slot />
    </div>
</div>

<style>
    .card {
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        padding: 16px;
        border-radius: var(--border-radius);
        max-width: 25.66rem;
        height: 500px;
        display: grid;
        grid-template-rows: auto 1fr;
    }
    .title {
        font-weight: 300;
        text-align: center;
        font-size: xx-large;
        margin-top: 1rem;
        color: var(--text);
        margin-bottom: 1.5rem;
    }
    .content {
        display: grid;
        gap: 1rem;
        padding: 1rem;
        padding-top: 30px;
        border-radius: var(--border-radius);
        background-color: var(--secondary);
    }
</style>
