---
import { Icon } from "astro-icon/components";
---

<div class="grid box-s-5">
  <h2 class="font-bold text-2xl">Lizenzen</h2>
  <div class="item">
    <h4>Astro</h4>
    <div>
      <a href="https://astro.build/">
        <Icon name="IcRoundPublic" />
      </a>
      <a
        title="MIT-Lizenz"
        href="https://github.com/withastro/astro/blob/main/LICENSE"
      >
        <Icon name="IcRoundGavel" />
      </a>
      <a href="https://github.com/withastro/astro">
        <Icon name="github" />
      </a>
    </div>
  </div>
  <div class="item">
    <h4>The Montserrat Font Project</h4>
    <div>
      <a href="https://fonts.google.com/specimen/Montserrat">
        <Icon name="IcRoundPublic" />
      </a>
      <a
        title="SIL OPEN FONT LICENSE Version 1.1"
        href="https://github.com/JulietaUla/Montserrat/blob/master/OFL.txt"
      >
        <Icon name="IcRoundGavel" />
      </a>
      <a href="https://github.com/JulietaUla/Montserrat">
        <Icon name="github" />
      </a>
    </div>
  </div>
  <div class="item">
    <h4>Work Sans</h4>
    <div>
      <a href="https://fonts.google.com/specimen/Work+Sans/">
        <Icon name="IcRoundPublic" />
      </a>
      <a
        title="SIL OPEN FONT LICENSE Version 1.1"
        href="https://openfontlicense.org/open-font-license-official-text/"
      >
        <Icon name="IcRoundGavel" />
      </a>
      <a href="https://github.com/weiweihuanghuang/Work-Sans">
        <Icon name="github" />
      </a>
    </div>
  </div>
  <div class="item">
    <h4>Material Icons / Material Symbols</h4>
    <div>
      <a href="https://fonts.google.com/icons">
        <Icon name="IcRoundPublic" />
      </a>
      <a
        title="Apache License Version 2.0"
        href="https://www.apache.org/licenses/LICENSE-2.0.txt"
      >
        <Icon name="IcRoundGavel" />
      </a>
      <a href="https://github.com/withastro/astro">
        <Icon name="github" />
      </a>
    </div>
  </div>
  <div class="item">
    <h4>Open Street Map</h4>
    <div>
      <a href="https://www.openstreetmap.org/">
        <Icon name="IcRoundPublic" />
      </a>
      <a
        title="Open Data Commons Open Database License"
        href="https://opendatacommons.org/licenses/odbl/"
      >
        <Icon name="IcRoundGavel" />
      </a>
      <a href="https://github.com/openstreetmap">
        <Icon name="github" />
      </a>
    </div>
  </div>
</div>

<style>
  .grid {
    margin-top: 2rem;
    width: 100%;
    color: var(--text);
    display: grid;
    max-width: 1500px;
    margin-inline: auto;
    gap: 30px;
    background-color: white;
    padding: 1rem;
    border-radius: 1rem;
  }
  .item {
    width: 100%;
    display: grid;
    gap: 1em;
    grid-template-columns: 1fr auto;
  }
  h2 {
    -webkit-text-fill-color: transparent;
    background: linear-gradient(120deg, var(--primary), var(--accent));
    -webkit-background-clip: text;
    width: fit-content;
  }
  a {
    height: 24px;
    display: inline-block;
    text-decoration: none;
    color: var(--text);
    fill: var(--text);
  }
  [data-icon] {
    height: 24px;
    width: 24px;
  }
  h4 {
    @apply font-bold;
  }
</style>
