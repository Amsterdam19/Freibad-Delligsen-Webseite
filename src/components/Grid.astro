---
const { titel } = Astro.props;
---
<h1 class="transition-fade-title">{titel}</h1>
<div class="contentGrid transition-fade-content">
  <slot />
</div>

<style>
  @media screen and (min-width: 1270px) {
    /* Define a transition duration during page visits */
    html.is-changing .transition-fade-title {
      transition: all 0.25s;
      transform: translateX(0);
      opacity: 1;
    }
    html.is-changing .transition-fade-content {
      transition: all 0.25s;
      transform: translateX(0);
      opacity: 1;
    }

    /* Define the styles for the unloaded pages */
    html.is-animating .transition-fade-title {
      transform: translateX(-50px);
      opacity: 0;
    }
    html.is-animating .transition-fade-content {
      transform: translateX(50px);
      opacity: 0;
    }
  }

  /*fadeIn*/
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h1 {
    width: fit-content;
    height: fit-content;
    font-size: clamp(2rem, 1.4551rem + 1.3061vw, 2.5rem);
    font-weight: 400;
    margin-bottom: 2rem;
  }
  .contentGrid {
    grid-area: content;
    width: 100%;
    height: 100%;
    display: flex;
    gap: 1rem 1.5rem;
    flex-wrap: wrap;
  }
  @media screen and (max-width: 1430px) {
    .grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto;
      grid-template-areas: "titel" "content";
      gap: 2rem;
    }
  }
  @media screen and (max-width: 800px) {
    .grid {
      grid-template-columns: 1fr;
      justify-items: center;
    }
    h1 {
      text-align: center;
    }
  }
</style>
