---
// component imports
import MainLayout from "../../layouts/MainLayout.astro";
import PostCard from "../../components/Neues/PostCardNew.astro";
import Pagination from "../../components/Pagination.astro";
import Grid from "../../components/Grid.astro";

// utils imports
import { formatBlogPosts } from "../../js/utils";

import { CollectionEntry, getCollection } from 'astro:content';


export async function getStaticPaths({ paginate }) {
    const posts = (await getCollection("neues")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
    return paginate(posts, {
        pageSize: 5,
    });
}

const { page } = Astro.props;
---

<MainLayout titel="Neuigkeiten" description="Neuigkeiten im Freibad Delligsen">
	<Grid titel="Neuigkeiten" class="transition-main">
		{
			page.data.map((post) => ( 
				<PostCard
					img={post.data.src}
					titel={post.data.title}
					pubDate={post.data.pubDate}
					description={post.data.description}
					href={`/neues/${post.slug}/`}
				/>
			))
		}
	</Grid>
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} currentPage={page.currentPage} totalPage={page.lastPage}/>
</MainLayout>
<style>
	.card_old {
		margin: 5%;
		margin-left: 10%;
		margin-right: 10%;
		width: 80%;
		max-width: 1400px;
		display: grid;
		grid-template-columns: 2fr 4fr;
		gap: 4%;
		padding: 2%;
		background-color: white;
		border-radius: 16px;
		border-color: var(--border-grey);
		border-width: 2px;
		border-style: solid;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
	}
	
	@media screen and (max-width: 720px) {
		.card_old {
			grid-template-columns: 1fr;
			grid-template-rows: 0.7fr 1fr;
			gap: 2.5%;
			padding: 5%;
			margin: 4%;
			width: 92%;
		}
	}
	.description {
		height: 100%;
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 1fr 1.5fr 1fr;
		gap: 4%;
	}
</style>
