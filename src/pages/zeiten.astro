---
import { Icon } from "astro-icon";
import Banner from "../components/Banner.astro";
import Card from "../components/Card/Card.astro";
import CardItem from "../components/Card/CardItem.astro";
import Grid from "../components/Grid.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  titel="Öffnungszeiten"
  description="Aktuelle Öffnungszeiten des Freibads Delligsen"
>
  <Grid titel="Öffnungszeiten">
    <Banner
    title="Freibad geschlossen"
    icon="IcRoundWarning"
    bg_color="neutral"
  >
    Das Freibad ist bis zum Saisonstart geschlossen.
  </Banner>
  <!--Bei schlechtem Wetter kann die Badezeit früher enden !!! -->
  <Banner
    title="Bei schlechtem Wetter kann die Badezeit früher enden !!!"
    icon="IcRoundRainy"
    bg_color="error"
  />
    <Card titel="In der Schulzeit">
      <CardItem titel="Montag bis Freitag" content="15:00 - 20:00 Uhr" />
      <CardItem
        titel="Samstag und Sonntag sowie feiertags"
        content="10:00 - 20:00 Uhr"
      />
    </Card>
    <Card titel="In den Sommerferien">
      <CardItem
        titel="Montag bis Sonntag sowie feiertags"
        content="10:00 - 20:00 Uhr"
      />
    </Card>
  </Grid>
  <div>
    <p>
      <a
        target="_blank"
        href="https://www.schulferien.org/deutschland/ferien/sommer/niedersachsen/"
      >
        *
        <Icon name="IcRoundLink" />
        Sommerferien Niedersachsen
      </a>
    </p>
  </div>
</MainLayout>

<style>
  div {
    display: flex;
    justify-content: flex-end;
    margin-inline: auto;
    padding: 1rem;
    max-width: var(--site-width);
    width: 100%;
  }
  a {
    text-decoration: none;
    color: var(--text);
  }
  [astro-icon] {
    height: 24px;
    vertical-align: bottom;
    font-size: 24px !important;
  }
</style>
